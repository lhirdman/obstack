{
  "title": "Service Health Grid",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["health", "status"],
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "svc",
        "type": "query",
        "label": "Services",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(health_service_up, service)",
        "refresh": 2,
        "multi": true,
        "includeAll": false
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "$svc",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "max_over_time(health_service_up{service=\"$svc\"}[5m])"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "auto",
        "textMode": "auto",
        "graphMode": "none",
        "justifyMode": "center",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 0.5 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "repeat": "svc",
      "repeatDirection": "h",
      "transparent": false
    }
  ]
}
