{
  "title": "Service Health & Dependencies (Tempo)",
  "panels": [
    {
      "type": "timeseries",
      "title": "Top services by p95 latency",
      "targets": [
        {
          "expr": "topk(10, histogram_quantile(0.95, sum(rate(traces_spanmetrics_latency_bucket[5m])) by (le, service_name)))"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Error rate by service (%)",
      "targets": [
        {
          "expr": "(sum(rate(traces_spanmetrics_calls_total{status_code=~\"ERROR|STATUS_CODE_ERROR\"}[5m])) by (service_name) / sum(rate(traces_spanmetrics_calls_total[5m])) by (service_name)) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      }
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}